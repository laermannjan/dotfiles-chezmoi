# exa (a better ls)
alias ls "exa --group-directories-first --color-scale --git --header --group --classify --long --extended"
alias ll ls
alias la "exa --group-directories-first --color-scale --git --header --group --classify --long --extended --all"
alias lstree "exa --group-directories-first --color-scale --git --header --group --classify --long --extended --tree"

# bat (a better cat)
alias cat bat

